{# option/index.twig #}
{% extends 'admin/admin-layout.twig'%}
{% block content %}
<div class='span8'>
  <h1>Options</h1>
  <!-- <h1>&nbsp;</h1> -->
  <hr/>
  <a href="#">Add new option</a>
  <hr>
{# @note  @css FR : faire une liste non styl√©e #}
<ul class='unstyled'>
  {% for option in options %}
  <li class='input-prepend input-append'>

    <span class=' add-on' style='width:220px'>{{ option['option_name'] }}</span>
    <input type='text' class='span5'  value='{{ option['option_value'] }}'>
    <a class='btn' href="#">update</a>
    <a class='btn' href='#'>remove</a>
  </li>
  {% endfor %}
</ul>
</div>
{% endblock %}